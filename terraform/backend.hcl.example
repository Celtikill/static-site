# Example Backend Configuration Template
# Copy this file to create environment-specific backend configurations
# 
# Usage:
#   cp backend.hcl.example backend-{env}.hcl
#   
# Environment-specific files:
#   - backend-dev.hcl     (Development environment)
#   - backend-staging.hcl (Staging environment) 
#   - backend-prod.hcl    (Production environment)

# S3 Backend Configuration Template
bucket                     = "static-site-terraform-state-{ACCOUNT-ID}"
key                        = "environments/{ENVIRONMENT}/terraform.tfstate"
region                     = "us-east-2"
encrypt                    = true
kms_key_id                = "alias/terraform-state-{ENVIRONMENT}"

# Native S3 State Locking (recommended over deprecated DynamoDB)
use_lockfile              = true

# Security Settings (Production Recommended)
skip_credentials_validation = false
skip_region_validation     = false
skip_requesting_account_id = false
skip_s3_checksum          = false
skip_metadata_api_check   = false

# Performance Settings
max_retries               = 5
force_path_style          = false

# Required Replacements:
# {ACCOUNT-ID}    - Your AWS Account ID
# {ENVIRONMENT}   - Environment name (dev, staging, prod)

# Security Note:
# Never commit actual backend configuration files with real values
# to version control. Use this template to create environment-specific
# configurations with actual values.