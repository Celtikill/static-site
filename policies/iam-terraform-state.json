{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::static-site-terraform-state-us-east-1",
        "arn:aws:s3:::static-site-terraform-state-us-east-1/*",
        "arn:aws:s3:::static-site-state-ENVIRONMENT-*",
        "arn:aws:s3:::static-site-state-ENVIRONMENT-*/*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "dynamodb:GetItem",
        "dynamodb:PutItem",
        "dynamodb:DeleteItem"
      ],
      "Resource": "arn:aws:dynamodb:REGION:ACCOUNT_ID:table/static-site-locks-ENVIRONMENT"
    }
  ]
}
