# Backend Configuration Example for Terraform/OpenTofu
# Copy this file to terraform/backend.hcl and customize for your environment

# S3 Backend Configuration
# This file is used with: tofu init -backend-config=backend.hcl

# Required Configuration
bucket         = "your-terraform-state-bucket-name"
key            = "static-website/terraform.tfstate"
region         = "us-east-1"
dynamodb_table = "terraform-state-locks"
encrypt        = true

# Optional Configuration with Secure Defaults
skip_region_validation      = false
skip_credentials_validation = false
skip_metadata_api_check     = false
force_path_style            = false

# KMS Encryption (recommended for production)
# kms_key_id = "alias/terraform-state-key"

# Multi-Environment Support
workspace_key_prefix = "env"

# Authentication Configuration
# profile = "default"  # AWS profile to use
# role_arn = "arn:aws:iam::123456789012:role/TerraformRole"  # Cross-account role

# Example Usage:
# 1. Copy this file to terraform/backend.hcl
# 2. Update the bucket name and other values
# 3. Run: tofu init -backend-config=backend.hcl