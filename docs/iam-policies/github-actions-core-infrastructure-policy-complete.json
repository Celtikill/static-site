{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "GeneralPermissions",
            "Effect": "Allow",
            "Action": [
                "sts:GetCallerIdentity",
                "ec2:DescribeRegions",
                "random:*"
            ],
            "Resource": "*"
        },
        {
            "Sid": "S3Operations",
            "Effect": "Allow",
            "Action": [
                "s3:*"
            ],
            "Resource": [
                "arn:aws:s3:::static-site-dev-*",
                "arn:aws:s3:::static-site-dev-*/*",
                "arn:aws:s3:::static-site-staging-*",
                "arn:aws:s3:::static-site-staging-*/*",
                "arn:aws:s3:::static-site-prod-*",
                "arn:aws:s3:::static-site-prod-*/*",
                "arn:aws:s3:::static-site-int-test*",
                "arn:aws:s3:::static-site-int-test*/*"
            ],
            "Condition": {
                "StringEquals": {
                    "aws:RequestedRegion": [
                        "us-east-1",
                        "us-east-2"
                    ]
                }
            }
        },
        {
            "Sid": "IAMDataSources",
            "Effect": "Allow",
            "Action": [
                "iam:GetRole",
                "iam:ListRoles",
                "iam:PassRole",
                "iam:GetOpenIDConnectProvider",
                "iam:ListOpenIDConnectProviders",
                "iam:DeleteRole"
            ],
            "Resource": [
                "arn:aws:iam::*:role/static-site-*",
                "arn:aws:iam::*:oidc-provider/token.actions.githubusercontent.com",
                "arn:aws:iam::*:role/static-site-s3-replication",
                "arn:aws:iam::*:role/static-site-github-actions"
            ]
        },
        {
            "Sid": "CloudFrontOperations",
            "Effect": "Allow",
            "Action": [
                "cloudfront:*"
            ],
            "Resource": "*",
            "Condition": {
                "StringEquals": {
                    "aws:RequestedRegion": "us-east-1"
                }
            }
        },
        {
            "Sid": "CloudFrontDataSources",
            "Effect": "Allow",
            "Action": [
                "cloudfront:ListCachePolicies",
                "cloudfront:ListOriginRequestPolicies",
                "cloudfront:GetCachePolicy",
                "cloudfront:GetOriginRequestPolicy"
            ],
            "Resource": "*"
        },
        {
            "Sid": "ACMCertificateOperations",
            "Effect": "Allow",
            "Action": [
                "acm:DescribeCertificate",
                "acm:ListCertificates",
                "acm:GetCertificate",
                "acm:ListTagsForCertificate"
            ],
            "Resource": "*",
            "Condition": {
                "StringEquals": {
                    "aws:RequestedRegion": "us-east-1"
                }
            }
        },
        {
            "Sid": "WAFOperations",
            "Effect": "Allow",
            "Action": [
                "wafv2:*"
            ],
            "Resource": "*",
            "Condition": {
                "StringEquals": {
                    "aws:RequestedRegion": "us-east-1"
                }
            }
        },
        {
            "Sid": "MonitoringOperations",
            "Effect": "Allow",
            "Action": [
                "cloudwatch:*",
                "logs:*",
                "sns:*",
                "budgets:*"
            ],
            "Resource": "*",
            "Condition": {
                "StringEquals": {
                    "aws:RequestedRegion": [
                        "us-east-1",
                        "us-east-2"
                    ]
                }
            }
        },
        {
            "Sid": "Route53Operations",
            "Effect": "Allow",
            "Action": [
                "route53:*"
            ],
            "Resource": "*"
        },
        {
            "Sid": "KMSOperations",
            "Effect": "Allow",
            "Action": [
                "kms:*"
            ],
            "Resource": "*",
            "Condition": {
                "StringEquals": {
                    "aws:RequestedRegion": [
                        "us-east-1",
                        "us-east-2"
                    ]
                }
            }
        },
        {
            "Sid": "TerraformStateManagement",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:PutObject",
                "s3:DeleteObject",
                "s3:ListBucket",
                "s3:GetBucketVersioning",
                "s3:GetBucketLogging",
                "s3:PutBucketVersioning",
                "s3:GetBucketAcl",
                "s3:GetBucketPolicy",
                "s3:GetBucketTagging",
                "s3:PutBucketTagging",
                "s3:GetObjectVersion",
                "s3:DeleteObjectVersion"
            ],
            "Resource": [
                "arn:aws:s3:::terraform-state-*",
                "arn:aws:s3:::terraform-state-*/*"
            ]
        },
        {
            "Sid": "DynamoDBStateLocking",
            "Effect": "Allow",
            "Action": [
                "dynamodb:GetItem",
                "dynamodb:PutItem",
                "dynamodb:DeleteItem",
                "dynamodb:DescribeTable"
            ],
            "Resource": [
                "arn:aws:dynamodb:*:*:table/terraform-state-lock-*"
            ]
        }
    ]
}