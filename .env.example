# Environment Variables Template for AWS Static Website
# Copy this file to .env and update with your actual values
# NEVER commit .env files to version control

# =============================================================================
# AWS CONFIGURATION
# =============================================================================

# AWS Region Configuration
AWS_REGION=us-east-1
AWS_DEFAULT_REGION=us-east-1

# AWS Credentials (Use AWS CLI profiles or IAM roles instead when possible)
# AWS_ACCESS_KEY_ID=your-access-key-here
# AWS_SECRET_ACCESS_KEY=your-secret-key-here
# AWS_SESSION_TOKEN=your-session-token-here

# AWS Profile (Recommended approach)
AWS_PROFILE=default

# =============================================================================
# TERRAFORM/OPENTOFU CONFIGURATION
# =============================================================================

# Backend Configuration
TF_VAR_backend_bucket=your-terraform-state-bucket-name
TF_VAR_backend_key=static-website/terraform.tfstate
TF_VAR_backend_region=us-east-1
TF_VAR_backend_dynamodb_table=terraform-state-locks

# Project Configuration
TF_VAR_project_name=my-static-website
TF_VAR_environment=prod
TF_VAR_github_repository=your-username/your-repo-name

# Domain Configuration (Optional)
# TF_VAR_domain_name=example.com
# TF_VAR_acm_certificate_arn=arn:aws:acm:us-east-1:123456789012:certificate/your-cert-id

# Monitoring Configuration
TF_VAR_alert_email_addresses=["admin@example.com"]
TF_VAR_monthly_budget_limit=50

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# WAF Configuration
TF_VAR_waf_rate_limit=2000
TF_VAR_enable_geo_blocking=false
# TF_VAR_blocked_countries=["CN","RU"]
# TF_VAR_ip_whitelist=["203.0.113.0/24"]

# KMS Configuration
TF_VAR_create_kms_key=true
# TF_VAR_kms_key_arn=arn:aws:kms:us-east-1:123456789012:key/your-key-id

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# GitHub Actions Configuration
GITHUB_TOKEN=your-github-token-here
GITHUB_REPOSITORY=your-username/your-repo-name

# CloudFront Configuration
TF_VAR_cloudfront_price_class=PriceClass_100

# Feature Flags
TF_VAR_enable_cross_region_replication=true
TF_VAR_enable_deployment_metrics=true
TF_VAR_create_route53_zone=false

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test Configuration
TEST_OUTPUT_DIR=./test-results
TEST_LOG_LEVEL=INFO
TEST_PARALLEL=false
TEST_CLEANUP=true

# Security Scanning
TRIVY_CACHE_DIR=.trivy
CHECKOV_FRAMEWORK=terraform

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Local Development
LOCAL_DOMAIN=localhost:3000
NODE_ENV=development

# Debug Settings
DEBUG=false
VERBOSE=false

# Editor Configuration
EDITOR=code

# =============================================================================
# MONITORING AND ALERTING
# =============================================================================

# CloudWatch Configuration
TF_VAR_cloudfront_error_rate_threshold=5.0
TF_VAR_cache_hit_rate_threshold=85.0
TF_VAR_waf_blocked_requests_threshold=100

# SNS Configuration
TF_VAR_sns_topic_name=static-website-alerts

# Budget Alerts
TF_VAR_s3_billing_threshold=10.0
TF_VAR_cloudfront_billing_threshold=20.0

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================

# External Monitoring (Optional)
# DATADOG_API_KEY=your-datadog-api-key
# NEW_RELIC_LICENSE_KEY=your-newrelic-license-key
# SENTRY_DSN=your-sentry-dsn

# Analytics (Optional)
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X
# AWS_PINPOINT_APP_ID=your-pinpoint-app-id

# CDN Configuration (Optional)
# CUSTOM_CDN_DOMAIN=cdn.example.com
# CDN_CACHE_TTL=86400

# =============================================================================
# NOTES AND BEST PRACTICES
# =============================================================================

# 1. Use AWS CLI profiles instead of hardcoded credentials when possible
# 2. For production, use IAM roles with temporary credentials
# 3. Rotate credentials regularly
# 4. Never commit .env files to version control
# 5. Use different .env files for different environments (.env.dev, .env.staging, .env.prod)
# 6. Consider using AWS Secrets Manager or Parameter Store for sensitive values
# 7. Validate all environment variables in your scripts before using them

